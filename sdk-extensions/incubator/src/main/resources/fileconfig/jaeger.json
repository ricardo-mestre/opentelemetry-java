{
    "$schema": "https://json-schema.org/draft-06/schema",
    "$ref": "#/definitions/Jaeger",
    "definitions": {
        "Jaeger": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "protocol": {
                    "type": "string",
                    "pattern": "^http/thrift.binary$"
                },
                "endpoint": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "http"
                    ]
                },
                "timeout": {
                    "type": "integer"
                },
                "user": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "agent_host": {
                    "type": "string"
                },
                "agent_port": {
                    "type": "integer"
                }
            },
            "required": [
                "agent_host",
                "agent_port",
                "endpoint",
                "password",
                "protocol",
                "timeout",
                "user"
            ],
            "title": "Jaeger"
        }
    }
}